    <div class="container col-md-6">
      <div class="card">
        <div class="card-header">
          <h3>REGISTRA PRODUCTOS</h3>
        </div>
        <div class="card-body">
          <form action="/crearProducto" method="post">
            <div class="form-group">
              <label for="nombre">Nombre:</label>
              <input type="text" class="form-control" name="nombre" required>
              <label for="precio">Precio:</label>
              <input type="number" class="form-control" name="precio" required>
              <label for="descripcion">Descripci√≥n:</label>
              <input type="text" class="form-control" name="descripcion" required>
              <label for="impuestos">Impuestos:</label>
              <input type="number" class="form-control" name="impuestos" required>
              <label for="vendedor">Vendedor:</label>
              <input type="text" class="form-control" name="vendedor" required>
              <label for="vendedor">Imagen:</label>
              <input type="file" class="form-control" name="image" required>
            </div>
            <br>
            <input type="submit" class="btn btn-info" value="Agregar">
          </form>
        </div>
      </div>
    </div>
